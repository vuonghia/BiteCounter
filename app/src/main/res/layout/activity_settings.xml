<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sustainablehealthsolutionsllc.bitecounter.SettingsActivity"
    android:background="@drawable/backrepeat"
    android:screenOrientation="portrait">


    <!--This is for changing the buzzer-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">
            <Button
                android:id="@+id/setting1"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:text="Change Buzzer"
                android:textColor="#E1E1E1"
                android:onClick="buzzerAlert"/>

            <!--This is for changing the limit-->
            <Button
                android:id="@+id/setting2"
                android:layout_above="@id/setting1"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:text="Change the Limit"
                android:textColor="#E1E1E1"
                android:onClick="limitAlert"/>


            <!--This is to change the number of bites please don't use me-->
            <Button
                android:id="@+id/setting3"
                android:layout_above="@id/setting2"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:text="Change the number of bites"
                android:textColor="#E1E1E1"
                android:onClick="biteAlert"/>

    </LinearLayout>


</RelativeLayout>
